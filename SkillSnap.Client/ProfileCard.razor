<div class="profile-card">
    <img src="@ImageUrl" alt="Profile Picture" class="profile-picture" />
    <h2>@Name</h2>
    <p>@Bio</p>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "Name Placeholder";

    [Parameter]
    public string Bio { get; set; } = "Bio placeholder text goes here. This is a short description about the user.";

    [Parameter]
    public string ImageUrl { get; set; } = "https://via.placeholder.com/100";
}

<style>
.profile-card {
    border: 1px solid #ccc;
    border-radius: 8px;
    padding: 16px;
    max-width: 300px;
    text-align: center;
    background: #fafafa;
}
.profile-picture {
    border-radius: 50%;
    width: 100px;
    height: 100px;
    object-fit: cover;
    margin-bottom: 12px;
}
</style>
